                    }
                </div>
            </div>
            <div class="col-4 col-lg-5 d-flex align-items-center justify-content-end right-col">
                <div class="navContactInfo">
                    @if (contactEmail!=""){
                        <div class="email-icon">
                            <a href="mailto:@contactEmail.ToString()" title="@contactEmail">
                            <img src="/images/email.svg" class="img-fluid" alt="Email us" /><span>@contactEmail</span></a>
                        </div>
                    }
                    @if (contactTelNo!=""){
                        <div class="tel-icon">
