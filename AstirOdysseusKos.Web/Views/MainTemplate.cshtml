    var currentCulture = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
    var allCultures = Model.Root().Cultures;

    var root = Model.Root();
    var siteLogoImg="";
    var bookingUrl="";
    var contactTelNo="";
    var contactEmail="";
    var classBody="";

    if (root.Value<IPublishedContent>("SiteLogo") != null){
        siteLogoImg = root.Value<IPublishedContent>("SiteLogo").Url();
    }
    if (root.HasValue("bookingLink")){
        bookingUrl=root.Value("bookingLink").ToString();
    }
    if (root.HasValue("contactTelephone")){
        contactTelNo=root.Value("contactTelephone").ToString();
    }
    if (root.HasValue("contactEmail")){
        contactEmail=root.Value("contactEmail").ToString();
    }
    if (!Model.HasValue("hideSlider") || Model.Value("hideSlider").ToString()=="True" || Model.IsDocumentType("newspage")){
        classBody="no-slider";
