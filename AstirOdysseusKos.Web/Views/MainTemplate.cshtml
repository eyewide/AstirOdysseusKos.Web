    @* --- HERO SLIDER --- *@
    @if (Model.HasValue("hideSlider") && Model.Value("hideSlider").ToString()!="True" && !Model.IsDocumentType("newspage")){
        <div class="position-relative @(Model.HasValue("videoUrl") ? "mainVideoSlider" : null) @(Model.HasValue("youTubeVideoUrl") ? "YTvideo-placement" : null) @(Model.IsDocumentType("accommodation") ? "topMediaInner" : null )">
            @if (Model.HasValue("videoUrl")) {
                var videoExt=Model.Value("videoUrl").ToString().Substring(Model.Value("videoUrl").ToString().LastIndexOf('.') + 1);
                <video autoplay muted loop > @*controls*@
                  <source src="@Model.Value("videoUrl")" type="video/@videoExt">
                  @if (Model.HasValue("fallbackVideoUrl")){
                    var videoExtAlt=Model.Value("fallbackVideoUrl").ToString().Substring(Model.Value("videoUrl").ToString().LastIndexOf('.') + 1);
                    <source src="@Model.Value("fallbackVideoUrl")" type="video/@videoExtAlt">
                  }
                </video>
            }else if (Model.HasValue("youTubeVideoUrl")){
                    <div id="player" data-plyr-provider="youtube" data-plyr-embed-id="@Model.Value("youTubeVideoUrl")" style="--plyr-color-main: #333333;"></div>
            }else{
                @Html.Partial("sliders")
            }
            
        </div>
    }else {
        <div class="noSlider-holder"></div>
    }
    
